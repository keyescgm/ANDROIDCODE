<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false"><shape android:shape="rectangle">
            <corners android:radius="5dp" />

            <solid android:color="@color/gray" />
        </shape></item>
    <item android:state_focused="true" android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:radius="5dp" />

            <solid android:color="@color/magenta" />
        </shape></item>
    <item android:state_focused="false"><shape android:shape="rectangle">
            <corners android:radius="5dp" />

            <solid android:color="@color/red" />
        </shape></item>

</selector><!-- <item android:state_enabled="false" android:drawable="@color/gray"/> -->
