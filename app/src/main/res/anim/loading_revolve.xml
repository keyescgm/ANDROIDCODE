<?xml version="1.0" encoding="utf-8"?>
<!--旋转 -->
<set xmlns:android="http://schemas.android.com/apk/res/android" >

    <rotate 
        android:fromDegrees="0"
        android:toDegrees="359"
        android:duration="2000"
        android:pivotX="50%"
        android:pivotY="50%"
        android:repeatCount="-1" />
    
    <alpha
        android:fromAlpha="0.5"
        android:toAlpha="0.5" />

</set>