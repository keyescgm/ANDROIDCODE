<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/set_top_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/solid_dark_holo" >

        <Button
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/back_button_bg"
            android:drawableLeft="@drawable/back_button_ioc_bg"
            android:drawablePadding="10dp"
            android:onClick="back"
            android:padding="10dp" />

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/back_button_bg"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:background="@color/danred"
        android:orientation="horizontal"
         >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/weight_user_man_off" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/weight_man" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/weight_women_off" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/weight_female" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_weight="3"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/name_et"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:drawableLeft="@drawable/weight_user_name"
                android:drawablePadding="45dp"
                android:gravity="center_vertical"
                android:hint="@string/register_nichenghint"
                android:textSize="16sp"
                android:background="@null"
                android:singleLine="true"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.1dip"
                android:layout_marginTop="2dp"
                android:background="#e0dddd" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/age_tv"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:drawableLeft="@drawable/weight_user_birthday"
                android:drawablePadding="45dp"
                android:gravity="center_vertical"
                android:hint="@string/weight_birthday"
                android:textSize="16sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.1dip"
                android:layout_marginTop="2dp"
                android:background="#e0dddd" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/high_tv"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:drawableLeft="@drawable/weight_user_height"
                android:drawablePadding="45dp"
                android:gravity="center_vertical"
                android:hint="@string/weight_tall"
                android:textSize="16sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.1dip"
                android:layout_marginTop="2dp"
                android:background="#e0dddd" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/weight_tv"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:drawableLeft="@drawable/delete"
                android:drawablePadding="45dp"
                android:gravity="center_vertical"
                android:hint="@string/weight_goal"
                android:onClick="onWeightPicker"
                android:textSize="16sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.1dip"
                android:layout_marginTop="2dp"
                android:background="#e0dddd" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>