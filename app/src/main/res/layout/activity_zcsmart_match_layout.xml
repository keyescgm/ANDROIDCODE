<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        tools:context="com.smartism.znzk.zhicheng.activities.ZCSmartMatchActivity">
    <TextView
        android:layout_marginTop="@dimen/dp_40"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16"
        android:id="@+id/tip_tv"
        android:gravity="center_horizontal"
        android:text=""
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@id/start_telligent_btn"
        />

    <Button
            android:textAllCaps="false"
            android:id="@+id/start_telligent_btn"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tip_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintDimensionRatio="3:1"
            android:background="@drawable/zhzj_default_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintVertical_bias="0.2"
            android:textColor="@color/white"
            android:text="@string/hwzf_start_pipei"
    />
    <android.support.constraint.Group
        android:visibility="gone"
        android:id="@+id/match_result_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="tv_result,list_view"
        />
    <TextView
            android:id="@+id/tv_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#BFFDFAFA"
            android:text="@string/hwzf_select_pipei_item"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/start_telligent_btn"
            android:textSize="@dimen/text_size_18sp"
            android:textColor="@color/zhzj_default"
            android:gravity="center"
            app:layout_constraintVertical_bias="0.05"
    />

    <com.smartism.znzk.widget.ElasticityListView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_result"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/list_view"
            android:scrollbars="none"
    ></com.smartism.znzk.widget.ElasticityListView>


</android.support.constraint.ConstraintLayout>
