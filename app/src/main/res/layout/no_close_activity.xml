<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/no_close_top_layout"
        style="@style/default_paddding_left_right"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/device_main_bg">

        <ImageView
            android:id="@+id/no_close_top_back"
            style="@style/zhzj_imageview_back"
            android:clickable="true" />

        <TextView
            android:id="@+id/regiter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_normal"
            android:layout_centerInParent="true"
            android:text="@string/alarm_no_close" />
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/no_close_top_layout"
        android:background="@color/graysloae" />

    <ListView
        android:id="@+id/no_close_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/binding_camera_sure"
        android:layout_below="@+id/divider"
        android:scrollbars="none"
        >
    </ListView>



</RelativeLayout>