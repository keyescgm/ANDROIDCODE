<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smartism.znzk.activity.device.NumberPickerSettingActivity">
    
    <com.smartism.znzk.widget.NumberPickerView
        android:id="@+id/number_picker_iew"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:npv_DividerColor="@color/black"
        app:npv_TextColorSelected="@color/device_main_add_zhuji"
        app:npv_TextColorNormal="@color/gray_low"
        app:npv_TextSizeNormal="@dimen/text_size_14sp"
        app:npv_TextSizeSelected="@dimen/text_size_18sp"
        android:layout_width="200dp"
        android:layout_height="200dp" />

</android.support.constraint.ConstraintLayout>
