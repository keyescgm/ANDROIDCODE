<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smartism.znzk.xiongmai.activities.XiongmaiSecuritySettingActivity">

    <LinearLayout
        android:paddingLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/item_pressed_bg"
        android:id="@+id/ll_password_setting"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="55dp">
        <TextView
            android:textSize="@dimen/text_size_14sp"
            android:text="@string/register_pass_button"
            style="@android:style/TextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <android.support.v7.widget.AppCompatTextView
            android:paddingRight="8dp"
            android:id="@+id/titleMotionDetectionAlarmLevelTip"
            android:text=""
            android:gravity="right|center_vertical"
            android:textSize="@dimen/text_size_14sp"
            style="@android:style/TextAppearance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableRight="@drawable/zhzj_tjsb_dianji"/>
    </LinearLayout>

    <View
        android:id="@+id/alarmLevelDevider"
        app:layout_constraintTop_toBottomOf="@id/ll_password_setting"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/graysloae"
        android:layout_width="0dp"
        android:layout_height="1dp" />

</android.support.constraint.ConstraintLayout>
