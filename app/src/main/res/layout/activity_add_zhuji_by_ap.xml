<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        tools:context="com.smartism.znzk.activity.device.add.AddZhujiByApConnectActivity">


    <LinearLayout
            android:id="@+id/send_wifi_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

        <com.smartism.znzk.view.MyRoundProcess
                android:id="@+id/send_wifi_round_process"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#00000000"
                android:visibility="visible"
                app:myroundColor="@color/bgColor_alert_button_press"
                app:myroundProgressColor="@color/zhzj_default"
                app:mytextColor="@color/zhzj_default"
                app:mytextSize="@dimen/text_size_22sp" />

        <TextView
                android:id="@+id/sendwifi_tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:text=""
                android:textColor="@color/zhzj_default" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/search_zhuji_parent"
        app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintTop_toBottomOf="@id/send_wifi_parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <com.smartism.znzk.view.MyRoundProcess
            android:id="@+id/search_round_process"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#00000000"
            android:visibility="visible"
            app:myroundColor="@color/bgColor_alert_button_press"
            app:myroundProgressColor="@color/zhzj_default"
            app:mytextColor="@color/zhzj_default"
            app:mytextSize="@dimen/text_size_22sp" />

        <TextView
            android:id="@+id/search_tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:text=""
            android:textColor="@color/zhzj_default" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
