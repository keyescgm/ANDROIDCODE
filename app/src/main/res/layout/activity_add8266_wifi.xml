<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.smartism.znzk.activity.device.add.Add8266WifiActivity">

    <RelativeLayout
        android:id="@+id/addzhuji_top_layout"
        style="@style/default_paddding_left_right"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/device_main_bg">

        <ImageView
            android:id="@+id/iv_back"
            style="@style/zhzj_imageview_back"
            android:clickable="true" />


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/connect_addzhuji_title" />


    </RelativeLayout>
    <View
        android:id="@+id/view"
        android:layout_below="@id/addzhuji_top_layout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/graysloae"/>

    <LinearLayout
        android:id="@+id/ll_add"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">


        <ImageView
            android:id="@+id/iv_wifi_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/wifi_logo" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/common_bg_pressed"
            android:textSize="@dimen/text_size_16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:padding="5dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_wifi_id" />

                <EditText
                    android:id="@+id/wifi_ssid"
                    style="@style/MyEditTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:ems="10"
                    android:hint="@string/smart_input_wifi_ssid"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/common_bg_pressed"
                    android:textSize="@dimen/text_size_18sp" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@drawable/divider_shape" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_wifi_pwd" />

                <EditText
                    android:id="@+id/wifi_pwd"
                    style="@style/MyEditTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:digits="@string/smart_input_wifi_pwd"
                    android:ems="10"
                    android:hint="@string/smart_input_wifi_pwd"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textColorHint="@color/common_bg_pressed"
                    android:textSize="@dimen/text_size_18sp" />

                <CheckBox
                    android:id="@+id/cbLaws"
                    android:layout_width="25dp"
                    android:layout_height="15dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/checkbox_selector"
                    android:button="@null" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@drawable/divider_shape" />


            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="40dp"
                android:background="@drawable/zhzj_default_button"
                android:text="@string/next"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>