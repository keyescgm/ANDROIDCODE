<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_setting_gensure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/Please_set_up_gesture_password"
        android:textColor="@color/zhzj_default"
        android:textSize="19sp" />

    <com.smartism.znzk.activity.view.LockPatternView
        android:id="@+id/lock_pattern"
        android:layout_width="@dimen/about_dialog_width"
        android:layout_height="@dimen/about_dialog_width"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/left_btn"
            android:layout_width="0dip"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_zhzj"
            android:onClick="onClick"
            android:textColor="@color/selector_btn_textcolor" />

        <Button
            android:id="@+id/right_btn"
            android:layout_width="0dip"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_zhzj"
            android:onClick="onClick"
            android:textColor="@color/selector_btn_textcolor" />
    </LinearLayout>

</RelativeLayout>