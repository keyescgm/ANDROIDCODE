<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_alertview_alert"
    >
    <TextView
            android:layout_marginTop="@dimen/dp_13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="题目?"
            android:textSize="19sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:padding="5dp"
            android:id="@+id/pwd_title_tv"
            android:visibility="gone"
    />
    <TextView
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_alert_button"
        android:text="@string/unlock_notice_layout_title"
        android:gravity="center"
        android:textSize="@dimen/textSize_alert_button"
        android:id="@+id/pwd_content_tv"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        />
    <View
        android:layout_width="match_parent"
        android:background="@color/bgColor_divier"
        android:layout_height="@dimen/size_divier"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/pwd_cancel_btn"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_alert_button"
            android:layout_weight="1"
            android:text="@string/permission_cancel"
            android:gravity="center"
            android:background="@drawable/btn_gray"
            android:clickable="true"
            />
        <View
            android:layout_width="@dimen/size_divier"
            android:background="@color/bgColor_divier"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/pwd_confirm_btn"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_alert_button"
            android:layout_weight="1"
            android:text="@string/permission_ensure"
            android:textColor="@color/red"
            android:gravity="center"
            android:background="@drawable/btn_gray"
            android:clickable="true"
            />
    </LinearLayout>

</LinearLayout>