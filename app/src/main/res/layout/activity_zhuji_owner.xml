    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/activity_zhujiowner_name"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/activity_zhuji_owner_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_null"
                android:imeOptions="flagNoExtractUi"
                android:maxLength="20"
                android:lines="1"
                android:padding="5dp"
                android:text="" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bgColor_divier" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/activity_zhujiowner_phone"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/activity_zhuji_owner_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_null"
                android:inputType="phone"
                android:maxLength="15"
                android:padding="5dp"
                android:text="" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bgColor_divier" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:lines="1"
                android:text="@string/activity_zhujiowner_tel"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/activity_zhuji_owner_tel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_null"
                android:maxLength="15"
                android:inputType="phone"
                android:padding="5dp"
                android:text="" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bgColor_divier" />

        <LinearLayout
            android:id="@+id/activity_zhuji_owner_selectcity"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/activity_zhujiowner_city"
                android:textStyle="bold" />

            <Button
                android:id="@+id/activity_zhuji_owner_city"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:hint="@string/activity_zhujiowner_please_select" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/bg_null"
                android:gravity="center_vertical"
                android:lines="1"
                android:padding="5dp"
                android:src="@drawable/arrow_right1"
                android:text="" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bgColor_divier" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/activity_zhujiowner_addre"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/activity_zhuji_owner_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_null"
                android:maxLength="100"
                android:padding="5dp"
                android:text="" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bgColor_divier" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bgColor_divier" />

</LinearLayout>
