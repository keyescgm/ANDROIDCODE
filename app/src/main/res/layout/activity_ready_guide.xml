<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ready_guide"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.smartism.znzk.activity.camera.ReadyGuideActivity">

    <RelativeLayout
        android:id="@+id/layout_title"
        style="@style/default_paddding_left_right"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/device_main_bg"
        android:visibility="visible">

        <ImageView
            android:id="@+id/back_btn"
            style="@style/zhzj_imageview_back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="@string/ready_title" />

        <ImageView
            android:id="@+id/scanner"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:onClick="lineChart"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <include layout="@layout/line_graylose" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:lines="1"
        android:padding="8dp"
        android:text="@string/ready_guide_msg1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:lines="1"
        android:padding="8dp"
        android:text="@string/ready_guide_msg2"
        android:textColor="@color/zhzj_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ready_img"
            android:layout_width="223dp"
            android:layout_height="167dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/gruid_wait_anim" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:lines="1"
        android:padding="8dp"
        android:text="@string/ready_guide_msg3" />

    <TextView
        android:id="@+id/show_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:gravity="center_horizontal"
        android:lines="1"
        android:padding="8dp"
        android:text="@string/ready_guide_msg4"
        android:textColor="@color/zhzj_default" />

    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bt_qr_next_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:background="@drawable/zhzj_default_button"
        android:text="@string/next"
        android:textColor="@color/selector_btn_textcolor" />
</LinearLayout>
