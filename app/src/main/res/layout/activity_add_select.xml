<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_select"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.smartism.znzk.activity.device.add.AddSelectActivity">
    <RelativeLayout
        style="@style/default_paddding_left_right"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/device_main_bg">

        <ImageView
            android:id="@+id/back_btn"
            style="@style/zhzj_imageview_back"
            android:clickable="true"
            android:src="@drawable/zhzj_back_button_bg" />

        <TextView
            android:id="@+id/title_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/add_contacts" />

        <ImageView
            android:id="@+id/right_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/right_menu"
            android:visibility="gone" />
    </RelativeLayout>

    <include layout="@layout/line_graylose" />

    <RelativeLayout
        android:id="@+id/select_deviec_camera"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_item_height"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_select_scene_zdy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/selec_scene_marginleft"
            android:layout_marginRight="@dimen/fab_margin"
            android:src="@drawable/zhzj_camera_add_networked" />

        <TextView
            android:id="@+id/tv_select_scene_zdy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/icon_1"
            android:layout_toRightOf="@+id/img_select_scene_zdy"
            android:text="@string/activity_camera_add_main" />

        <ImageView
            android:id="@+id/icon_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/selec_scene_icon_margin"
            android:src="@drawable/zhzj_tjcj_dianji" />
    </RelativeLayout>

    <include layout="@layout/line_graylose" />

    <RelativeLayout
        android:id="@+id/select_deviec_zhuji"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_item_height"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_select_scene_ds"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/selec_scene_marginleft"
            android:layout_marginRight="@dimen/fab_margin"
            android:src="@drawable/zhzj_camera_add_new" />

        <TextView
            android:id="@+id/tv_select_scene_ds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/icon_2"
            android:layout_toRightOf="@+id/img_select_scene_ds"
            android:text="@string/activity_devices_list_rightmenu_addzhuji" />

        <ImageView
            android:id="@+id/icon_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/selec_scene_icon_margin"
            android:src="@drawable/zhzj_tjcj_dianji" />
    </RelativeLayout>
    <include layout="@layout/line_graylose" />
</LinearLayout>
