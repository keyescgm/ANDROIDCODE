<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.smartism.znzk.zhicheng.activities.ZCModeListActivity">

    <TextView
        android:id="@+id/no_type_tip_tv"
        android:textColor="@color/zhzj_default"
        android:textSize="@dimen/text_size_18sp"
        android:padding="10dp"
        android:text="@string/hwzf_no_type_click_tip"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.smartism.znzk.widget.ElasticityListView
            android:id="@+id/content_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/no_type_tip_tv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:scrollbars="none"
    ></com.smartism.znzk.widget.ElasticityListView>

</android.support.constraint.ConstraintLayout>
