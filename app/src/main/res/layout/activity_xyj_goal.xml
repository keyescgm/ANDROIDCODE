<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/device_main_bg">

        <ImageView
            android:id="@+id/back"
            style="@style/zhzj_imageview_back"
            android:layout_marginLeft="17dp"
            android:onClick="back"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置安全值" />


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/rl_ssy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_top"
        android:orientation="vertical">

        <RelativeLayout
            style="@style/default_paddding_left_right"
            android:layout_width="fill_parent"
            android:layout_height="58dp">

            <TextView
                android:id="@+id/tips_security"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="收缩压" />

            <EditText
                android:id="@+id/et_ssy"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_toLeftOf="@id/iv1"
                android:background="@null"
                android:focusableInTouchMode="false"
                android:hint="160 mmHg"
                android:singleLine="true"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/right_list" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/graysloae" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl_szy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_ssy"
        android:orientation="vertical">

        <RelativeLayout
            style="@style/default_paddding_left_right"
            android:layout_width="fill_parent"
            android:layout_height="58dp">

            <TextView
                android:id="@+id/szy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="收缩压" />

            <EditText
                android:id="@+id/et_szy"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_toLeftOf="@id/iv2"
                android:background="@null"
                android:focusableInTouchMode="false"
                android:hint="95 mmHg"
                android:focusable="false"
                android:singleLine="true"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/right_list" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/graysloae" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/name_et"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@null"
                android:drawableLeft="@drawable/weight_user_name"
                android:drawablePadding="45dp"
                android:gravity="center_vertical"
                android:hint="@string/register_nichenghint"
                android:singleLine="true"
                android:textSize="16sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.1dip"
                android:layout_marginTop="2dp"
                android:background="#e0dddd" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/age_tv"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:drawableLeft="@drawable/weight_user_birthday"
                android:drawablePadding="45dp"
                android:gravity="center_vertical"
                android:hint="@string/weight_birthday"
                android:textSize="16sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.1dip"
                android:layout_marginTop="2dp"
                android:background="#e0dddd" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/high_tv"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:drawableLeft="@drawable/weight_user_height"
                android:drawablePadding="45dp"
                android:gravity="center_vertical"
                android:hint="@string/weight_tall"
                android:textSize="16sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.1dip"
                android:layout_marginTop="2dp"
                android:background="#e0dddd" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/weight_tv"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:drawableLeft="@drawable/delete"
                android:drawablePadding="45dp"
                android:gravity="center_vertical"
                android:hint="@string/weight_goal"
                android:onClick="onWeightPicker"
                android:textSize="16sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.1dip"
                android:layout_marginTop="2dp"
                android:background="#e0dddd" />
        </LinearLayout>


    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_margin="20dp"
        android:background="@drawable/zhzj_default_button"
        android:onClick="sure"
        android:text="@string/sure"
        android:textColor="@color/white"
        android:textSize="18sp" />


</RelativeLayout>