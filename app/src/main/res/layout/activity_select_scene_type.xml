<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_scene_type"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/device_main_bg"
    android:orientation="vertical"
    tools:context="com.smartism.znzk.activity.scene.SelectSceneTypeActivity">

    <RelativeLayout
        style="@style/default_paddding_left_right"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/device_main_bg">

        <ImageView
            android:id="@+id/back_btn"
            style="@style/zhzj_imageview_back"
            android:clickable="true"
            android:src="@drawable/zhzj_back_button_bg" />

        <TextView
            android:id="@+id/title_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/activity_slectscene_title_scenetype" />

        <ImageView
            android:id="@+id/right_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/right_menu"
            android:visibility="gone" />
    </RelativeLayout>

    <include layout="@layout/line_graylose" />

    <RelativeLayout
        android:id="@+id/select_scene_dsaf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_item_height"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_select_scene_dsaf"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/selec_scene_marginleft"
            android:layout_marginRight="@dimen/fab_margin"
            android:src="@drawable/zhzj_cj_add_dingshiscfang" />

        <TextView
            android:id="@+id/tv_select_scene_dsaf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/icon_0"
            android:layout_toRightOf="@+id/img_select_scene_dsaf"
            android:text="@string/activity_slectscene_item_dsaf" />

        <ImageView
            android:id="@+id/icon_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/selec_scene_icon_margin"
            android:src="@drawable/zhzj_tjcj_dianji" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/select_scene_zdy"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_item_height"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_select_scene_zdy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/selec_scene_marginleft"
            android:layout_marginRight="@dimen/fab_margin"
            android:src="@drawable/zhzj_cjlx_zidingyi" />

        <TextView
            android:id="@+id/tv_select_scene_zdy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/icon_1"
            android:layout_toRightOf="@+id/img_select_scene_zdy"
            android:text="@string/activity_slectscene_item_diy" />

        <ImageView
            android:id="@+id/icon_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/selec_scene_icon_margin"
            android:src="@drawable/zhzj_tjcj_dianji" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/select_scene_ds"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_item_height"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_select_scene_ds"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/selec_scene_marginleft"
            android:layout_marginRight="@dimen/fab_margin"
            android:src="@drawable/zhzj_cjlx_dingshi" />

        <TextView
            android:id="@+id/tv_select_scene_ds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/icon_2"
            android:layout_toRightOf="@+id/img_select_scene_ds"
            android:text="@string/activity_slectscene_item_time" />

        <ImageView
            android:id="@+id/icon_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/selec_scene_icon_margin"
            android:src="@drawable/zhzj_tjcj_dianji" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/select_scene_ld"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_item_height"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_select_scene_ld"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/selec_scene_marginleft"
            android:layout_marginRight="@dimen/fab_margin"
            android:src="@drawable/zhzj_cjlx_liandong" />

        <TextView
            android:id="@+id/tv_select_scene_ld"
            style="@style/textStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/icon_3"
            android:layout_toRightOf="@+id/img_select_scene_ld"
            android:text="@string/activity_slectscene_item_trigger" />

        <ImageView
            android:id="@+id/icon_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/selec_scene_icon_margin"
            android:src="@drawable/zhzj_tjcj_dianji" />

    </RelativeLayout>


    <View
        android:id="@+id/view8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />
</LinearLayout>
