<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    app:cardBackgroundColor="@color/white"
    >


<LinearLayout
    android:gravity="center"
    android:id="@+id/new_pwd_layout"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:padding="20dp"
        android:id="@+id/input_title_tv"
        style="@android:style/TextAppearance"
        android:textSize="16sp"
        android:text="@string/inputpassword"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:maxLength="30"
        android:textSize="14sp"
        android:textCursorDrawable="@drawable/cursor_zhuji_default"
        android:paddingLeft="3dp"
        android:background="@drawable/shape_black_rect"
        android:id="@+id/new_password_edit"
        android:hint="@string/inputpassword"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:background="@drawable/item_pressed_bg"
            android:layout_weight="1"
            android:id="@+id/cancel_btn"
            android:textColor="@color/red"
            android:text="@string/cancel_panel"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <Button
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/item_pressed_bg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:id="@+id/confirm_btn"
            android:textColor="@color/black"
            android:text="@string/confirm" />
    </LinearLayout>
</LinearLayout>

</android.support.v7.widget.CardView>
