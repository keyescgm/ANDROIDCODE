<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/zhzj_default_button"
        android:layout_height="match_parent">

    <ImageView
            android:layout_width="wrap_content"
            app:srcCompat = "@drawable/ic_air_pic"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.2"
            android:id="@+id/ir_pic"
            android:layout_height="wrap_content"/>

    <TextView

            app:layout_constraintTop_toBottomOf="@id/ir_pic"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            android:text="格力"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18sp"
            android:id="@+id/display_brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            app:layout_constraintTop_toBottomOf="@id/display_brand_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="格力"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14sp"
            android:id="@+id/display_remote_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>