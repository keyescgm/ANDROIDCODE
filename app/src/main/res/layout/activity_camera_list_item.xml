<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.smartism.znzk.activity.camera.CameraListActivity">

        <LinearLayout
            android:id="@+id/item_camera"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_item_height"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/binding_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:text="sxdngl"
                android:layout_weight="1"/>

            <CheckBox
                android:id="@+id/binding_item_checbox"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:drawableRight="@drawable/zhzj_radiobutton_select"
                android:layout_marginRight="5dp" />
        </LinearLayout>


</RelativeLayout>
