<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ec921a"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ctrl_top_layout"
        android:layout_width="fill_parent"
        android:layout_height="55dp">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/back_button_bg_yaokan"
            android:drawableLeft="@drawable/back_button_ioc_bg"
            android:drawablePadding="10dp"
            android:padding="10dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/tv_tname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/hwzf_tvbox_tvbox"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/graysloae" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_tvbox_power"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/yk_click_rectan_item"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/tv_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/tv_power" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/hwzf_tvbox_power"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_tv_power"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:background="@drawable/yk_click_rectan_item"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/tv_power"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/tv_power" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="电视机开关"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_choose"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:background="@drawable/yk_click_rectan_item"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/tv_box_choose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/tv_check" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="输入选择"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp">

                <LinearLayout
                    android:id="@+id/ll_pindao"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/tv_pindao_item"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/pindao_plus_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/yk_click_bg_item"
                        android:src="@drawable/tv_plus" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:padding="10dp"
                        android:text="@string/hwzf_tv_pindao"
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/pindao_minus_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/yk_click_bg_item"
                        android:src="@drawable/tv_jian" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/jingyin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/jingyin_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/yk_click_bg_item"
                        android:src="@drawable/icon_jingyin" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text=""
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/zhuye_btn"
                        style="@style/tv_circle_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/icon_zhuye" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_yinliang"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/tv_pindao_item"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/vol_plus_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/yk_click_bg_item"
                        android:src="@drawable/tv_plus" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:padding="10dp"
                        android:text="@string/hwzf_tv_yinliang"
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/vol_minus_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/yk_click_bg_item"
                        android:src="@drawable/tv_jian" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/iv_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/yk_click_bg_item"
                    android:src="@drawable/icon_list" />

                <Button
                    android:id="@+id/exit_btn"
                    style="@style/tv_circle_item"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="5dp"
                    android:text="@string/hwzf_tv_exit" />

                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/rl_circle_bg">

                    <ImageView
                        android:id="@+id/iv_ok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/yk_click_bg_item"
                        android:src="@drawable/tv_ok" />

                    <ImageView
                        android:id="@+id/iv_ok_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/yk_click_bg_item"
                        android:src="@drawable/tv_small_circle" />

                    <ImageView
                        android:id="@+id/iv_ok_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/yk_click_bg_item"
                        android:src="@drawable/tv_small_circle" />

                    <ImageView
                        android:id="@+id/iv_ok_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/yk_click_bg_item"
                        android:src="@drawable/tv_small_circle" />

                    <ImageView
                        android:id="@+id/iv_ok_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/yk_click_bg_item"
                        android:src="@drawable/tv_small_circle" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/yk_click_bg_item"
                    android:src="@drawable/icon_back" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/tvbox_left_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yk_click_bg_item"
                    android:src="@drawable/icon_left" />

                <ImageView
                    android:id="@+id/tvbox_pause_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/yk_click_rectan_item"
                    android:src="@drawable/icon_pasue" />

                <ImageView
                    android:id="@+id/tvbox_right_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/yk_click_bg_item"
                    android:src="@drawable/icon_right" />
            </RelativeLayout>

            <GridView
                android:id="@+id/grid_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:listSelector="@color/white"
                android:numColumns="3"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:scrollbars="none"
                android:verticalSpacing="10dp"></GridView>

            <GridView
                android:id="@+id/grid_other_key"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:listSelector="@color/white"
                android:numColumns="3"
                android:scrollbars="none"
                android:verticalSpacing="10dp">

            </GridView>


            <!--<RelativeLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:gravity="center_vertical"-->
            <!--android:paddingBottom="30dp"-->
            <!--android:paddingTop="30dp"-->
            <!--android:visibility="gone">-->

            <!--<Button-->
            <!--android:id="@+id/btn_yaotou"-->
            <!--style="@style/fengshan_button"-->
            <!--android:layout_marginLeft="20dp"-->
            <!--android:text="摇头" />-->

            <!--<Button-->
            <!--android:id="@+id/btn_speedtype"-->
            <!--style="@style/fengshan_button"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:text="风类" />-->

            <!--<Button-->
            <!--android:id="@+id/btn_clock"-->
            <!--style="@style/fengshan_button"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_marginRight="20dp"-->
            <!--android:text="定时" />-->
            <!--</RelativeLayout>-->

        </LinearLayout>

    </ScrollView>
</LinearLayout>