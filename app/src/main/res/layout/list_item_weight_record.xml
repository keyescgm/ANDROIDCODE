<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_del"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/red"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/activity_scene_del"
        android:textColor="@color/white" />


    <TextView
        android:id="@+id/tv_fenpei"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/tv_del"
        android:background="@color/zhzj_default"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/weight_fenpei"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:drawablePadding="@dimen/dp_1"
        android:drawableTop="@drawable/zhzj_his_time"
        android:text="14:20"
        android:textSize="12sp" />

    <View
        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_toRightOf="@id/tv_time"
        android:background="@color/graysloae" />


    <TextView
        android:id="@+id/tv_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_7"
        android:layout_toRightOf="@id/view"
        android:gravity="center_horizontal"
        android:text="55.0"
        android:textColor="#000000"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/tv_weight_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_toRightOf="@id/tv_weight"
        android:text="Kg"
        android:textSize="14sp" />


    <View
        android:id="@+id/view1"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_8"
        android:layout_toRightOf="@id/tv_weight_unit"
        android:background="@color/graysloae"
        android:visibility="gone" />


</RelativeLayout>
